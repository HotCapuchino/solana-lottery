{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "ts-node": {
      "compilerOptions": {
        "module": "commonjs"
      }
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "compilerOptions": {
      "declaration": true,
      "moduleResolution": "node",
      "module": "es2015",
      "types": ["node"]
    },
    "include": ["src/client/**/*"],
    "exclude": ["node_modules"]
}